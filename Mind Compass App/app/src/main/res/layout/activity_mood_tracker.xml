<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Mood_Tracker.MoodTracker">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/MaimMoodLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backround_gradient"
                android:orientation="vertical"
                android:gravity="center">
            android:padding="25dp"

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="#1A7562"
                    android:text="Select Emotion"
            />
            <ImageView
                    android:id="@+id/excellentEmoticon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/ic_emoticon_excited_outline"
                    tools:ignore="VectorDrawableCompat"


            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#1A7562"
                    android:text="Excellent"
            />
            <ImageView
                    android:id="@+id/happyEmoticon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/ic_emoticon_happy_outline"
                    tools:ignore="VectorDrawableCompat"


            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#1A7562"
                    android:text="Happy"
            />
            <ImageView
                    android:id="@+id/mehEmoticon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/ic_emoticon_neutral_black_24dp"
                    tools:ignore="VectorDrawableCompat"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#1A7562"
                    android:text="Meh"
            />
            <ImageView
                    android:id="@+id/sadEmoticon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/ic_emoticon_sad_outline"
                    tools:ignore="VectorDrawableCompat"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#1A7562"
                    android:text="Sad"
            />
            <ImageView
                    android:id="@+id/angryEmoticon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/ic_emoticon_angry_outline"
                    tools:ignore="VectorDrawableCompat"


            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#1A7562"
                    android:text="Angry"
            />
            <Button
                    android:id="@+id/btn_previous_moods"
                    android:text="See Previous Moods"
                    android:textAllCaps="false"
                    android:background="#82BDE4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>