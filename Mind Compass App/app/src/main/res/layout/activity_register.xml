<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.Main.Register">
<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/register_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/backround_gradient">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Register"
                  android:padding="30dp"
                  android:textSize="30dp"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="First Name"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/firstName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Surname"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/surname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Email"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Title"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Gender"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/gender"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Cell Number"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/cellNumber"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"
                  android:inputType="phone"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Date of Birth"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/dateOfBirth"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"
                  android:inputType="date"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Address"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/address"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"
                  android:inputType="textPostalAddress"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="City"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/city"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Post Code"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/postCode"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Country"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/country"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="Citizenship"
                  android:textAlignment="center"
                  android:textColor="#1A7562"/>

        <EditText android:id="@+id/Citizenship"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:textAllCaps="false"
                  android:textColor="#070707"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
